{
	// リポジトリ内に変更が多い場合は警告を無視
	"git.ignoreLimitWarning": true,

	// phpcsの保存時整形を動作させる為に、[php]のeditor.formatOnSaveをfalseに
  "[html]": {
    "editor.formatOnSave": true
  },
  "[scss]": {
    "editor.formatOnSave": false
  },
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[php]": {
    "editor.formatOnSave": false
	},

	// prettierとぶつかり合うのでデフォルトの整形は無効にする
	"javascript.format.enable": false,

	// prettierでeslintを使用できるようにする
	"prettier.eslintIntegration": true,

	// WordPress Coding Standard準拠の設定
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"files.eol": "\n",
	"phpcs.standard": "./phpcs.xml",

	// phpcbfの設定
  "phpcbf.standard": "WordPress",
  "phpcbf.executablePath": "~/.composer/vendor/bin/phpcbf",
	"phpcbf.onsave": true,

	// ESLintの設定
	"eslint.autoFixOnSave": true,
}
